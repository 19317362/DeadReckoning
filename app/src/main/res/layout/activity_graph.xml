<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nisargpatel.inertialnavigation.activity.GraphActivity"
    android:id="@+id/graph_layout_relative">

    <Button
        android:layout_width="70.5dp"
        android:layout_height="75dp"
        android:text="@string/start"
        android:id="@+id/buttonGraphStart"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15sp" />

    <Button
        android:layout_width="70.5dp"
        android:layout_height="75dp"
        android:text="@string/stop"
        android:id="@+id/buttonGraphStop"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="15sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="330dp"
        android:layout_height="375dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayoutGraph"/>

    <Button
        android:layout_width="70.5dp"
        android:layout_height="75dp"
        android:text="Calibrate"
        android:id="@+id/buttonGraphCalibrate"
        android:textSize="8sp"
        android:layout_alignTop="@+id/buttonGraphStart"
        android:layout_toRightOf="@+id/buttonGraphStart"
        android:layout_toEndOf="@+id/buttonGraphStart"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"/>

    <Button
        android:layout_width="70.5dp"
        android:layout_height="75dp"
        android:text="@string/clear"
        android:id="@+id/buttonGraphClear"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/buttonGraphCalibrate"
        android:layout_alignLeft="@+id/buttonGraphCalibrate"
        android:layout_alignStart="@id/buttonGraphCalibrate"
        android:layout_marginLeft="86.5dp"
        android:layout_marginStart="86.5dp"/>

</RelativeLayout>
